<div class="cart" id="myBtn"><button>Shopping Cart</button></div>
<div class="form-row">
    <div class="col-md-11 mb-3">
        <center>
            <h3>Products Available</h3>
        </center>

    </div>
</div>
<ul>
    <div class="h2 text-center"> {{category.categoryName}}</div>

    {{#each products}}
    <div class="col-md-2 column productbox">
        <div class="producttitle">Product Id: {{this.productId}}</div>
        <img src="{{this.imgLink}}" class="img-responsive">
        <div class="producttitle">Date Posted: {{ formatDate this.uploadDate day="numeric" month="long" year="numeric"}}
        </div>
        {{!-- <div id="categoryName" class="producttitle">Category Name: {{category.categoryName}}</div> --}}
        <div class="producttitle">Product Name: {{this.productName}}</div>
        <div class="producttitle">Product Quantity: {{this.availableQuantity}}</div>
        <div class="producttitle">Description: {{this.description}}</div>
        <div class="productprice">Unit Price: {{this.price}}
            <div class="pull-right"><a href="#" class="btn btn-danger btn-sm" role="button">BUY</a></div>
        </div>
        {{/each}}
        

</ul>
<!-- Modal content -->
<div class="modal-content">
    <div class="modal-header">
        <span class="close">&times;</span>
        <h2>Modal Header</h2>
    </div>
    <div class="modal-body">
        <p>Some text in the Modal Body</p>
        <p>Some other text...</p>
    </div>
    <div class="modal-footer">
        <h3>Modal Footer</h3>
    </div>
</div>

